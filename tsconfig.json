{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./resources/src/*"],
      "@hooks/*": ["./resources/src/hooks/*"],
      "@css/*": ["./resources/src/assets/css/*"],
      "@pages/*": ["./resources/src/pages/*"],
      "@components/*": ["./resources/src/components/*"],
      "@layouts/*": ["./resources/src/layouts/*"],
      "@types/*": ["./resources/src/types/*"],
      "@utils/*": ["./resources/src/utils/*"]
    }
  },
  "include": ["resources/src", "declaration.d.ts", ".prettierrc.js"]
}
